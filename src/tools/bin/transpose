# this program transpose a file
# read from stdin or from given file

function trans()
{
cat /dev/stdin | awk '
BEGIN{
 max_nf = 0;
}
{
  for(c = 1; c <= NF; c++) {
    a[c, NR] = $c
  }
  if(max_nf < NF) {
    max_nf = NF
  }
}
END {
    for(c = 1; c <= max_nf; c++) {
for(r = 1; r <= NR; r++) {
      printf("%s ", a[c, r])
    }
    print ""
  }
}'
}


if [ $# -eq 0 ] ; then
    cat /dev/stdin | trans
elif [ $# -eq 1 ] ; then
    cat $1 | trans
else
    echo "call $0 [filename] to run program"
    exit 1
fi
exit 0
