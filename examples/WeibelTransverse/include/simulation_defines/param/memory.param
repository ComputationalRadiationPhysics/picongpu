const uint32_t BYTES_EXCHANGE_Z = 256 * 256 * 1024; //256 MiB
const uint32_t BYTES_CORNER = 2 * 256 * 1024; //2 MiB
const uint32_t BYTES_EDGES = 8 * 256 * 1024; //8 MiB
}
