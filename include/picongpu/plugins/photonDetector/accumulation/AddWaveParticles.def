    namespace particles
    {
        namespace traits
        {
            //! Check if a particle species has all the required identifiers and flags for the AddWaveParticles policy
            template<typename T_Species>
            struct SpeciesEligibleForSolver<
                T_Species,
                picongpu::plugins::photonDetector::particleHandlers::AddWaveParticles>
            {
                using FrameType = typename T_Species::FrameType;

                // This accumulations strategy always needs position and weighting.
                using AlwaysRequiredIdentifiers = MakeSeq_t<position<>, weighting>;
                // Particles has the phase attribute. This should be updated by pusher on each time step.
                // Wavelength is calculated per particle from particle momentum.
                using DynamicWavelengthScenarioAttributes = MakeSeq_t<phase>;
                // Particle has no phase attribute. Particles need to have the startPhase attribute.
                // Particles are treated as if all of particles had the same constant wavelength stored
                // in the wavelength flag.
                using ConstWavelengthScenarioAttributes = MakeSeq_t<startPhase>;

                using SpeciesHasBaseIdentifiers =
                    typename pmacc::traits::HasIdentifiers<FrameType, AlwaysRequiredIdentifiers>::type;

                using SpeciesHasConstScenarioAttributes =
                    typename pmacc::traits::HasIdentifiers<FrameType, ConstWavelengthScenarioAttributes>::type;
                using SpeciesHasConstScenarioFlags = typename pmacc::traits::HasFlag<FrameType, wavelength<>>::type;
                using SpeciesHasConstScenarioIdentifiers =
                    typename bmpl::and_<SpeciesHasConstScenarioAttributes, SpeciesHasConstScenarioFlags>::type;

                using SpeciesHasDynamicScenarioIdentifiers =
                    typename pmacc::traits::HasIdentifiers<FrameType, DynamicWavelengthScenarioAttributes>::type;

                using type = typename bmpl::and_<
                    SpeciesHasBaseIdentifiers,
                    typename bmpl::or_<SpeciesHasConstScenarioIdentifiers, SpeciesHasDynamicScenarioIdentifiers>::
                        type>::type;
            };
        } // namespace traits
    } // namespace particles
