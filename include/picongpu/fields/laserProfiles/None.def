            namespace none
            {
                namespace defaults
                {
                    struct NoneParam
                    {
                        /** unit: meter */
                        static constexpr float_64 WAVE_LENGTH_SI = 0.0;

                        /** unit: Volt / meter */
                        static constexpr float_64 AMPLITUDE_SI = 0.0;

                        /** unit: s */
                        static constexpr float_64 PULSE_LENGTH_SI = 0.0;

