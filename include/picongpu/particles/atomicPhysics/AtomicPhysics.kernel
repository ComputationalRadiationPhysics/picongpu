                        // std::cout << "    histogram filled" << std::endl;
                        // gpu
                        printf("    histogram filled\n");
                    }

                    bool debug;
                    if(workerIdx == 0)
                    {
                        debug = true;
                    }
                    else
                    {
                        debug = false;
                    }

                    solveRateEquation<T_numWorkers, AtomicRate>(
                        acc,
                        mapper,
                        rngFactoryInt,
                        rngFactoryFloat,
                        ionBox,
                        atomicDataBox,
                        &histogram,
                        debug);

