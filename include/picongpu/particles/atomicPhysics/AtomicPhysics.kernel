                        }
                        std::cout << " }" << std::endl;
                        //}*/
                    }
                    // debug only
                    // cupla::__syncthreads( acc );

                    decelerateElectrons<T_numWorkers>(acc, mapper, electronBox, histogram, atomicDataBox);

                    cupla::__syncthreads(acc);

                    // debug only
                    if(workerIdx == 0)
                    {
                        // cpu
                        // std::cout << "    electrons decelerated" << std::endl;
                        // gpu
                        printf("    electrons decelerated\n");
                    }
                }
            };

