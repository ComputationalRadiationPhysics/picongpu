                RngFactoryFloat rngFactoryFloat;

                AtomicPhysicsKernel(
                    RngFactoryInt rngFactoryInt = RngFactoryInt{0},
                    RngFactoryFloat rngFactoryFloat = RngFactoryFloat{0})
                    : rngFactoryInt(rngFactoryInt)
                    , rngFactoryFloat(rngFactoryFloat)
