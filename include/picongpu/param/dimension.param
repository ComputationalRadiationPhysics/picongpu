/** @file
 *
 * The spatial dimensionality of the simulation.
 */

#pragma once


/** Possible values: DIM3 for 3D3V and DIM2 for 2D3V.
 */
#define SIMDIM DIM3

namespace picongpu
{
    /** @attention if simDim = DIM2, sim.pic.getCellSize().z() must be set to the system size that is integrated during
     * the conversion from 3D density to 2D density!
     */
    constexpr uint32_t simDim = SIMDIM;
} // namespace picongpu
